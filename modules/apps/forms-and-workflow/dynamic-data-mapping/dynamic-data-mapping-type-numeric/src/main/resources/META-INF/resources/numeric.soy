{namespace DDMNumeric}

/**
 * Defines the delegated template for the numeric field.
 */
{deltemplate ddm.field variant="'numeric'"}
	{call .render data="all" /}
{/deltemplate}

/**
 * Prints the DDM form numeric field.
 */
{template .render}
	{@param? dir: string}
	{@param? label: string}
	{@param name: string}
	{@param placeholder: string}
	{@param? predefinedValue: any}
	{@param readOnly: bool}
	{@param? required: bool}
	{@param showLabel: bool}
	{@param? tip: string}
	{@param? tooltip: string}
	{@param value: any}
	{@param visible: bool}

	{let $displayValue: isNonnull($value) ? $value : $predefinedValue ? $predefinedValue : '' /}

	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-numeric {$tip ? 'liferay-ddm-form-field-has-tip' : ''}" data-fieldname="{$name}">
		{if $showLabel}
			<label class="control-label{$readOnly ? ' disabled' : ''}" for="{$name}">
				{$label}

				{if $required}
					<span class="icon-asterisk text-warning"></span>
				{/if}
			</label>

			<p class="liferay-ddm-form-field-tip">{$tip ? $tip: ''}</p>
		{/if}

		<div class="input-group-container {if $tooltip}input-group-default{/if}">
			<input class="field form-control" {if $dir}dir="{$dir}"{/if} {if $readOnly}disabled{/if} id="{$name}" name="{$name}" placeholder="{$placeholder}" type="text" value="{$displayValue}">

			{if $tooltip}
				<span class="input-group-addon">
					<span class="input-group-addon-content">
						<a class="help-icon help-icon-default icon-monospaced icon-question" data-original-title="{$tooltip}" data-toggle="popover" href="javascript:;" title="{$tooltip}"></a>
					</span>
				</span>
			{/if}
		</div>
	</div>
{/template}